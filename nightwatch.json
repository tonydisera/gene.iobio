{
  "src_folders" : ["e2e"],
  "output_folder" : "e2e/logs",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "e2e/page_objects",
  "globals_path" : "e2e/globals.js",

  "selenium" : {
    "start_process" : true,
    "server_path" : "node_modules/selenium-standalone/.selenium/selenium-server/2.53.1-server.jar",
    "log_path" : "e2e/logs",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "node_modules/selenium-standalone/.selenium/chromedriver/2.22-x64-chromedriver",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost:3008",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : "./e2e/screenshots",
        "on_failure" : true
      },
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "phantomjs.binary.path": "node_modules/phantomjs-prebuilt/bin/phantomjs",
        "phantomjs.cli.args": [
          "--webdriver-logfile=logs/phantomjsdriver.log",
          "--ignore-ssl-errors=true"
        ]
      },
      "exclude" : ["logs", "page_objects", "screenshots", "globals.js"]
    },

    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "firefox" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}